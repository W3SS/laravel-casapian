{% extends 'fields.field' %}
{% block controls %}
  <div class="input-append datetime-picker">
    {{ Form_text( field.name, field.getTime, {'data-format':'dd-MM-yyyy HH:mm:ss'} ) }}
    <span class="add-on">
      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
      </i>
    </span>
  </div>
{% endblock %}

